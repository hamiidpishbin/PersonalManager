{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.IdentityModel": "Debug"
    }
  },
  "ApplicationName": "PM.DTM",
  "Elasticsearch": {
    "Uri": "http://pm.elasticsearch:9200"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://pm.elasticsearch:9200",
          "indexFormat": "pm-dtm-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "numberOfShards": 1,
          "numberOfReplicas": 0
        }
      }
    ]
  },
  "JwtOptions": {
    "Authority": "http://pm.keycloak:8080/realms/personalManager",
    "Audience": "pm-confidential-client",
    "RequireHttpsMetadata": false,
    "TokenValidationParameters": {
      "ValidateIssuer": true,
      "ValidIssuer": "http://pm.keycloak:8080/realms/personalManager",
      "ValidateAudience": true,
      "ValidAudience": "pm-confidential-client"
    }
  },
  "AllowedHosts": "*"
}